{
  "name": "graphql.zenodotus",
  "description": "...",
  "version": "0.1.0",
  "author": "MedControl",
  "private": true,
  "license": "Apache License 2.0",
  "scripts": {
    "clean": "rimraf dist && rimraf node_modules",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "docs": "spectaql spectaql.yml",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "fix": "npm run format && eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "start": "nest start",
    "start:dev": "nest start --watch | pino-pretty --singleLine",
    "start:debug": "nest start --debug --watch | pino-pretty --singleLine",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@apollo/server": "^4.7.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^8.4.0",
    "@graphql-tools/utils": "^9.2.1",
    "@nestjs/common": "^9.3.12",
    "@nestjs/platform-express": "^9.4.2",
    "@rsdk/common": "^1.0.12",
    "@rsdk/core": "^1.0.12",
    "@rsdk/http-server": "^1.0.12",
    "@rsdk/logging": "^1.0.12",
    "axios": "^1.4.0",
    "simple-git": "^3.19.0"
  },
  "devDependencies": {
    "@mc/project-node": "^0.1.7",
    "@nestjs/cli": "^9.0.1",
    "@nestjs/core": "^9.3.12",
    "@nestjs/schematics": "^9.0.1",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "jest": "^27.2.5",
    "lint-staged": "^13.2.2",
    "pino-pretty": "^10.0.0",
    "source-map-support": "^0.5.20",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-morph": "^17.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "prettier": "@mc/prettier-node"
}
